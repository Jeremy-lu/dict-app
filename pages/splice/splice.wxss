movable-area {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

image, .splice-panel .cell, .select-panel .cell {
  width: 132rpx;
  height: 132rpx;
  line-height: 132rpx;
}

movable-view image {
  background-color: #fff;
  border: solid 1px #eee;
  box-shadow: 0 0 12px rgba(0,0,0,.2);
}

.splice-panel .cell.active {
  box-shadow: 0 0 12px rgba(0,0,0,.2);
  background-color: #ccc;
}

.top-operate {
  width: 90%;
  position: fixed;
  top: 50rpx;
  left: 5%;
}

.top-operate button {
  margin-top: 0;
}

.splice-panel .cell,
.select-panel .cell {
  border: solid 2rpx #eee;
  display: inline-block;
  vertical-align: bottom;
  color: #999;
  text-align: center;
}

.splice-panel .cell {
  position: relative;
}

.splice-panel {
  position: fixed;
  top: 500rpx;
  left: 5%;
}

.select-panel {
  height: 163rpx;
  white-space: nowrap;
  position: fixed;
  left: 0;
  bottom: 0;
}

.select-panel .item {
  display: inline-block;
}

.remove-icon {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top: -20rpx;
  left: -2rpx;
  background: url(data:image/png;base64,) center center no-repeat;
  -webkit-background-size: 36rpx auto;
  background-size: 36rpx auto;
}

.none {
  display: none !important;
}

.right {
  float: right;
}
