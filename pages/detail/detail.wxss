page, .page, .page__bd{
    height: 100%;
    background-color: #f6f8f9;
}

.page__bd{
    padding-bottom: 0;
}

.weui-navbar {
  background: #fff;
}

.weui-panel:first-child,
.weui-panel {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.weui-panel__hd {
  color:#333;
  font-size:28rpx;
}

.weui-media-box.weui-media-box_text {
  color: #666666;
}

.basic-info .dynamic-write {
  width: 220rpx;
  height: 220rpx;
}

.basic .basic-info .desc {
  margin-left: 40rpx;
  color:#666666;
  font-size:26rpx;
}

.basic .desc .placeholder:not(:first-child) {
  padding-top: 6rpx;
}

.vivi .evolve image {
  width: 100%;
  height: 140rpx;
}

.basic .desc .text, .vivi .desc .text, .vivi .explain {
  font-size: 26rpx;
  color: #666;
}

.vivi .desc image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 6rpx;
}

.vivi .desc .weui-media-box__desc {
  overflow: inherit;
  text-overflow: inherit;
  display: inherit;
  line-height: inherit;
  padding-bottom: 20rpx;
}

.vivi .explain {
  border-top:2rrpx solid #e5e5e5;
  padding-top: 20rpx;
}

.vivi .explain .title {
  color: #666;
}

.vivi .explain .text {
  padding-left: 40rpx;
  display: block;
}

.vivi .detail .examples {
  padding-left: 30rpx;
}

.vivi .detail .title {
  padding-top: 20rpx;
  color: #666;
}

.vivi .detail .examples .example {
  padding-top: 10rpx;
  color: #666;
}

.xiao image {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
}

.xiao .img .part {
  display: inline-block;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
}

.xiao .explain {
  font-size: 26rpx;
}

.uncle image {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
}

.uncle image {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
}

.zdic-calligraphy .item {
  margin: 10rpx 16rpx;
  float: left;
}

.zdic-calligraphy .item image {
  width: 110rpx;
  height: 122rpx;
  padding: 10rpx;
  background: #eeeeee;
  border: solid 2rpx #dddddd;
  display: block;
}

.zdic-calligraphy .item .title {
  margin-top:10rpx;
  display: block;
  font-size: 20rpx;
  text-align: center;
  color: #666666;
}

.empty-data {
  margin-top:100rpx;
  text-align:center;
  font-size:24rpx;
  color:#999999;
}
